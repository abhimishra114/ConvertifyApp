<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_theme"
    android:paddingStart="10dp"
    tools:context=".MainActivity"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/source_code_pro"
        android:text="From:"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/radio_group_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/from">

        <RadioButton
            android:id="@+id/binary_1"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Binary"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/decimal_1"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Decimal"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/octal_1"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Octal"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/hex_1"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Hex"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/source_code_pro"
        android:text="To:"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/from"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/radio_group_1"
        app:layout_constraintTop_toBottomOf="@id/to">

        <RadioButton
            android:id="@+id/binary_2"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Binary"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/decimal_2"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Decimal"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/octal_2"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Octal"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/hex_2"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/radio_selector"
            android:button="@color/teal_200"
            android:elevation="4dp"
            android:fontFamily="@font/source_code_pro"
            android:gravity="center"
            android:text="Hex"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:id="@+id/enter_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/source_code_pro"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radio_normal"
        android:fontFamily="@font/source_code_pro"
        android:gravity="center"
        android:hint="Input Text"
        android:inputType="textCapCharacters"
        android:textColor="@color/white"
        android:textColorHint="@color/white_op"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/convert_button"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/radio_selected"
        android:fontFamily="@font/source_code_pro"
        android:text="Convert"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/reset_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_button"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/radio_selected"
        android:fontFamily="@font/source_code_pro"
        android:text="Reset"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/convert_button"
        app:layout_constraintTop_toBottomOf="@id/edit_text" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/source_code_pro"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_button" />

    <TextView
        android:id="@+id/output"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text=""
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/source_code_pro"
        android:background="@drawable/radio_normal"
        app:layout_constraintTop_toBottomOf="@id/textView_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_code_pro"
        android:text="Connect with developer: "
        android:textSize="10sp"
        android:textColor="@color/white_op"
        app:layout_constraintBottom_toTopOf="@id/git"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/output" />

    <TextView
        android:id="@+id/git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="github.com/abhimishra114"
        android:textStyle="italic"
        android:textColor="@color/white_op"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/source_code_pro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>